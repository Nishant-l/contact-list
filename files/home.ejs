<html>
    <head>
        
        <script src="https://kit.fontawesome.com/1ddc25cde5.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
        <title>
            <%= title %>
        </title>
    </head>
    <body>
        <h1 id="heading"><i class="fas fa-clipboard"></i> &nbsp My Contact List</h1>
        <div id="outer">
            <div id="list">
                <ul>
                    <% for(let i of contactList){%>
                            <li id='listItem'>
                                <p><%= i.name %></p>
                                <p><%= i.contact_no %> &nbsp;
                                    <a href="/dc/<%= i.contact_no %>"><i class="fas fa-times-circle"></i></a>
                                </p>
                            </li>
                            
                    <%}%>
                </ul>
            </div>
            <div id="form">
                <h4>Add New Contact</h4>
                <form action="/addContact" method="POST">
                    <input type="text" required name="name" placeholder="Name">
                    <input type="text" required name="contact_no" placeholder="contact_noumber">
                    <button type="submit">ADD Contact</button>
                </form>
            </div>
        </div>    
    </body>
</html>